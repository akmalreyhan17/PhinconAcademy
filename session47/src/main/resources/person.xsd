<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://example.com/person"
           xmlns:ct="http://example.com/countries"
           elementFormDefault="qualified">

    <xs:import namespace="http://example.com/countries" schemaLocation="countries.xsd"/>
    
    <xs:element name="Person">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Name" type="xs:string"/>
                <xs:element name="Country" type="ct:country"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>
